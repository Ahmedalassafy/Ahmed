Dialogue: 0,0:26:06.83,0:26:08.14,Default,,0,0,0,,كنا بحارة
Dialogue: 0,0:26:12.82,0:26:14.35,Default,,0,0,0,,ولماذا توقفنا عن الإبحار؟
Dialogue: 0,0:26:15.73,0:26:17.39,Default,,0,0,0,,"بسبب "ماوي
Dialogue: 0,0:26:17.96,0:26:20.11,Default,,0,0,0,,"عندما سرق قلب "تيفيتي
Dialogue: 0,0:26:20.34,0:26:23.70,Default,,0,0,0,,حل الظلام، وخرج "تيكا" من سباته
Dialogue: 0,0:26:24.13,0:26:27.48,Default,,0,0,0,,ترصدت الوحوش، ولم تعد القوارب
Dialogue: 0,0:26:28.22,0:26:29.61,Default,,0,0,0,,...ولحماية شعبنا
Dialogue: 0,0:26:29.81,0:26:32.20,Default,,0,0,0,,حرم الزعماء القدماء الإبحار
Dialogue: 0,0:26:32.47,0:26:35.46,Default,,0,0,0,,والآن نسينا ما هي حقيقتنا
Dialogue: 0,0:26:36.10,0:26:39.77,Default,,0,0,0,,واستمر الظلام في الانتشار
Dialogue: 0,0:26:40.80,0:26:42.71,Default,,0,0,0,,مبعدًا أسماكنا
Dialogue: 0,0:26:42.91,0:26:48.23,Default,,0,0,0,,ومستنفدًا حياة الكائنات من جزيرة تلو الأخرى
Dialogue: 0,0:26:51.65,0:26:52.86,Default,,0,0,0,,طال الأمر جزيرتنا أيضًا
Dialogue: 0,0:26:53.26,0:26:54.59,Default,,0,0,0,,ولكن يومًا ما
Dialogue: 0,0:26:54.79,0:26:58.72,Default,,0,0,0,,سيجتاز أحدهم حيدنا البحري مبحرًا
Dialogue: 0,0:26:59.03,0:27:00.35,Default,,0,0,0,,"ويجد "ماوي
Dialogue: 0,0:27:00.55,0:27:03.06,Default,,0,0,0,,ويبحر به عبر المحيط الفسيح
Dialogue: 0,0:27:03.26,0:27:08.17,Default,,0,0,0,,لكي يعيد قلب" تيفيتي" إلى مستقره
Dialogue: 0,0:27:09.36,0:27:15.10,Default,,0,0,0,,كنت موجودة في ذلك اليوم، فلقد اختارك المحيط
Dialogue: 0,0:27:23.58,0:27:26.59,Default,,0,0,0,,ظننت أنه كان حلمًا
Dialogue: 0,0:27:32.14,0:27:33.30,Default,,0,0,0,,ليس حلمًا
Dialogue: 0,0:27:35.16,0:27:38.75,Default,,0,0,0,,...آمن أجدادنا أن "ماوي" موجود هناك
Dialogue: 0,0:27:38.95,0:27:40.38,Default,,0,0,0,,في نهاية خطافه
Dialogue: 0,0:27:40.96,0:27:43.80,Default,,0,0,0,,تعقبيه، وسوف تعثرين عليه
Dialogue: 0,0:27:44.01,0:27:46.99,Default,,0,0,0,,ولكن، لماذا اختارني أنا؟
Dialogue: 0,0:27:47.45,0:27:50.29,Default,,0,0,0,,أنا لا أعلم حتى كيف أجتاز الحيد
Dialogue: 0,0:27:51.20,0:27:53.26,Default,,0,0,0,,ولكن أعلم من يستطيع
Dialogue: 0,0:28:03.05,0:28:05.09,Default,,0,0,0,,تغير لون السرطانات إلى الأسود -\Nوماذا عن الأسماك؟ -
Dialogue: 0,0:28:05.27,0:28:06.27,Default,,0,0,0,,هذا يحصل في الجزيرة بأسرها
Dialogue: 0,0:28:06.47,0:28:07.27,Default,,0,0,0,,من فضلكم، اهدؤوا
Dialogue: 0,0:28:07.28,0:28:08.93,Default,,0,0,0,,كيف ستتصرف؟ -\Nسنحفر حقولًا أخرى -
Dialogue: 0,0:28:08.95,0:28:11.06,Default,,0,0,0,,...سنجد حلًا لـ -\Nيمكننا إيقاف زحف الظلام -
Dialogue: 0,0:28:11.25,0:28:12.40,Default,,0,0,0,,ونحمي جزيرتنا
Dialogue: 0,0:28:12.92,0:28:16.01,Default,,0,0,0,,يوجد أسطول من القوراب\Nقوارب "كانو" ضخمة
Dialogue: 0,0:28:16.45,0:28:18.03,Default,,0,0,0,,"نستطيع الإبحار بها لنجد "ماوي
Dialogue: 0,0:28:18.21,0:28:19.55,Default,,0,0,0,,ونجبره على إعادة القلب
Dialogue: 0,0:28:20.24,0:28:23.03,Default,,0,0,0,,لقد كنا بحارة، ونستطيع الإبحار مجددًا
Dialogue: 0,0:28:26.56,0:28:30.37,Default,,0,0,0,,أخبرتني أن أحمي شعبنا، وهذا ما أفعله
Dialogue: 0,0:28:30.63,0:28:33.22,Default,,0,0,0,,أبي؟ ما الذي تفعله؟
Dialogue: 0,0:28:33.43,0:28:36.13,Default,,0,0,0,,كان يجب أن أحرق تلك القوراب منذ وقت طويل
Dialogue: 0,0:28:36.21,0:28:38.33,Default,,0,0,0,,"لا تفعل، علينا إيجاد "ماوي
Dialogue: 0,0:28:38.53,0:28:41.05,Default,,0,0,0,,علينا إعادة القلب -\Nلا وجود لأي قلب -
Dialogue: 0,0:28:41.23,0:28:43.38,Default,,0,0,0,,هذا مجرد حجر
Dialogue: 0,0:28:43.81,0:28:44.21,Default,,0,0,0,,لا
Dialogue: 0,0:28:57.75,0:28:58.39,Default,,0,0,0,,أيها الزعيم
Dialogue: 0,0:28:58.81,0:28:59.85,Default,,0,0,0,,إنها والدتك
Dialogue: 0,0:29:10.28,0:29:11.21,Default,,0,0,0,,أمي
Dialogue: 0,0:29:34.91,0:29:35.84,Default,,0,0,0,,اذهبي
Dialogue: 0,0:29:36.70,0:29:37.83,Default,,0,0,0,,ماذا تقولين، جدتي؟
Dialogue: 0,0:29:40.96,0:29:41.93,Default,,0,0,0,,اذهبي
Dialogue: 0,0:29:42.46,0:29:44.79,Default,,0,0,0,,لم يحن الوقت بعد، لا أستطيع
Dialogue: 0,0:29:45.21,0:29:49.61,Default,,0,0,0,,يجب عليك الذهاب، فقد اختارك المحيط
Dialogue: 0,0:29:50.00,0:29:52.50,Default,,0,0,0,,...تعقبي الخطاف -\Nجدتي؟ -
Dialogue: 0,0:29:52.83,0:29:54.81,Default,,0,0,0,,..."وعندما تجدين "ماوي
Dialogue: 0,0:29:55.06,0:29:58.11,Default,,0,0,0,,أمسكيه من تلابيبه
Dialogue: 0,0:29:58.47,0:30:02.39,Default,,0,0,0,,"وقولي له أنا "مونا" بنت قرية "موتونوي
Dialogue: 0,0:30:02.60,0:30:07.27,Default,,0,0,0,,ستبحر بقاربي عبر البحر
Dialogue: 0,0:30:07.68,0:30:11.38,Default,,0,0,0,,"وتعيد قلب "تيفيتي
Dialogue: 0,0:30:13.27,0:30:15.90,Default,,0,0,0,,لا أحتمل الابتعاد عنك
Dialogue: 0,0:30:16.22,0:30:21.50,Default,,0,0,0,,سأظل برفقتك أين ما تذهبين
Dialogue: 0,0:30:34.38,0:30:35.43,Default,,0,0,0,,اذهبي
Dialogue: 0,0:30:48.04,0:30:49.89,Default,,0,0,0,,ذلك الضوء ما بين السماء والبحر"
Dialogue: 0,0:30:50.10,0:30:52.72,Default,,0,0,0,,يناديني
Dialogue: 0,0:30:52.97,0:30:59.19,Default,,0,0,0,,ولا يعلم أحد مداه
Dialogue: 0,0:30:59.41,0:31:04.31,Default,,0,0,0,,مضى ذلك الوقت الذي تساءلت ما هو قدري
Dialogue: 0,0:31:04.52,0:31:11.20,Default,,0,0,0,,أنا ذاهبة بنفسي لمعالم مجهولة
Dialogue: 0,0:31:11.48,0:31:14.03,Default,,0,0,0,,ففي كل خطوة أخطوها
Dialogue: 0,0:31:14.21,0:31:16.89,Default,,0,0,0,,قرار أتخذه\Nو الآن لا أستطيع العودة
Dialogue: 0,0:31:17.08,0:31:23.28,Default,,0,0,0,,من ذلك المجهول، حيث سأذهب بمفردي\Nحيث أنتمي
Dialogue: 0,0:31:31.75,0:31:34.23,Default,,0,0,0,,أرى روحها تضيء في البحر ليلًا
Dialogue: 0,0:31:34.41,0:31:37.11,Default,,0,0,0,,تناديني
Dialogue: 0,0:31:37.31,0:31:39.90,Default,,0,0,0,,ومتأكدة أنني
Dialogue: 0,0:31:40.09,0:31:42.79,Default,,0,0,0,,أستطيع اجتيازه
Dialogue: 0,0:31:43.01,0:31:48.50,Default,,0,0,0,,يرشدني القمر والسماء والرياح تحملني
Dialogue: 0,0:31:48.72,0:31:51.29,Default,,0,0,0,,قريبًا سأعرف
Dialogue: 0,0:31:51.51,0:31:58.26,Default,,0,0,0,,"أقصى ما سأصل
Dialogue: 0,0:32:13.38,0:32:16.49,Default,,0,0,0,,"أنا "مونا" بنت قرية "مواتوني
Dialogue: 0,0:32:16.70,0:32:19.79,Default,,0,0,0,,...ستبحر بقاربي عبر البحر
Dialogue: 0,0:32:20.04,0:32:22.26,Default,,0,0,0,,"وتعيد قلب "تيفيتي
Dialogue: 0,0:32:22.33,0:32:23.77,Default,,0,0,0,,..."أنا "موانا
Dialogue: 0,0:32:24.34,0:32:26.72,Default,,0,0,0,,..."بنت قرية "موت
Dialogue: 0,0:32:28.33,0:32:28.86,Default,,0,0,0,,"نوي"
Dialogue: 0,0:32:41.36,0:32:42.20,Default,,0,0,0,,هذا أنت يا "هي هي"؟
Dialogue: 0,0:33:04.74,0:33:09.12,Default,,0,0,0,,لا بأس، أنت بخير. ألا ترى؟
Dialogue: 0,0:33:09.85,0:33:15.42,Default,,0,0,0,,أترى، الماء لطيف والمحيط صديقنا
Dialogue: 0,0:33:17.38,0:33:18.28,Default,,0,0,0,,يا "هي هي"؟
Dialogue: 0,0:33:19.82,0:33:20.80,Default,,0,0,0,,هي هي"؟"
Dialogue: 0,0:33:35.53,0:33:37.13,Default,,0,0,0,,امكث هنا
Dialogue: 0,0:33:43.06,0:33:46.28,Default,,0,0,0,,"حسنًا، محطتنا القادمة "ماوي
Dialogue: 0,0:33:53.95,0:33:56.87,Default,,0,0,0,,"أنا "موانا" بنت قرية "موتنوي
Dialogue: 0,0:33:57.12,0:34:03.75,Default,,0,0,0,,ستبحر بقاربي في البحر
Dialogue: 0,0:34:04.01,0:34:06.36,Default,,0,0,0,,"وتعيد قلب "تيفيتي
Dialogue: 0,0:34:07.43,0:34:11.20,Default,,0,0,0,,"أنا "مونا" بنت قرية "موتنوي
Dialogue: 0,0:34:11.62,0:34:13.51,Default,,0,0,0,,ستبحر بقاربي
Dialogue: 0,0:34:16.61,0:34:17.42,Default,,0,0,0,,لا
Dialogue: 0,0:34:24.11,0:34:27.55,Default,,0,0,0,,لا تنقلب
Dialogue: 0,0:34:37.97,0:34:42.18,Default,,0,0,0,,أيها المحيط، هل يمكنك مساعدتي؟
Dialogue: 0,0:34:44.88,0:34:46.78,Default,,0,0,0,,!يا لحظي
Dialogue: 0,0:34:48.92,0:34:51.52,Default,,0,0,0,,تحرك أرجوك
Dialogue: 0,0:35:02.30,0:35:03.15,Default,,0,0,0,,ساعدني
Dialogue: 0,0:35:03.45,0:35:04.51,Default,,0,0,0,,أنا أتوسل إليك
Dialogue: 0,0:35:48.89,0:35:51.24,Default,,0,0,0,,ماذا فعلت؟
Dialogue: 0,0:35:51.81,0:35:55.59,Default,,0,0,0,,قلت ساعدني، ولم أقل حطم قاربي
Dialogue: 0,0:35:56.03,0:35:58.40,Default,,0,0,0,,لا فائدة ترجى منك
Dialogue: 0,0:35:59.35,0:36:00.99,Default,,0,0,0,,تقضي الأسماك حاجتها فيك
Dialogue: 0,0:36:01.25,0:36:02.04,Default,,0,0,0,,طوال اليوم
Dialogue: 0,0:36:02.41,0:36:03.06,Default,,0,0,0,,...إذن
Dialogue: 0,0:36:11.69,0:36:13.90,Default,,0,0,0,,ما هذا؟
Dialogue: 0,0:36:17.72,0:36:18.63,Default,,0,0,0,,"ماوي"
Dialogue: 0,0:36:25.77,0:36:26.69,Default,,0,0,0,,"إنه "ماوي
Dialogue: 0,0:37:03.75,0:37:07.65,Default,,0,0,0,,يا "مواي"، أيها المتحول\Nونصف إله الجو والبحر
Dialogue: 0,0:37:07.96,0:37:09.10,Default,,0,0,0,,..."أنا "موانا
Dialogue: 0,0:37:09.30,0:37:10.45,Default,,0,0,0,,بطل الرجال
Dialogue: 0,0:37:10.46,0:37:11.25,Default,,0,0,0,,ماذا؟
Dialogue: 0,0:37:11.45,0:37:13.25,Default,,0,0,0,,من الصحيح القول "ماوي" المتحول
Dialogue: 0,0:37:13.36,0:37:15.60,Default,,0,0,0,,نص إله الجو والبحر وبطل الرجال
Dialogue: 0,0:37:15.64,0:37:18.75,Default,,0,0,0,,آسف على المقاطعة، ولكنني بطل الرجال\Nأكملي
Dialogue: 0,0:37:20.39,0:37:21.57,Default,,0,0,0,,..."أنا "موا
Dialogue: 0,0:37:21.77,0:37:23.95,Default,,0,0,0,,آسف، والنساء
Dialogue: 0,0:37:24.12,0:37:26.34,Default,,0,0,0,,الرجال والناس، كلاهما. الجميع
Dialogue: 0,0:37:26.34,0:37:27.72,Default,,0,0,0,,"لست مثل كائنات الـ"غرغور
Dialogue: 0,0:37:27.72,0:37:30.04,Default,,0,0,0,,كما تعلمين، "ماوي" بطل الجميع
Dialogue: 0,0:37:30.04,0:37:31.19,Default,,0,0,0,,تبلين حسنًا
Dialogue: 0,0:37:31.20,0:37:33.32,Default,,0,0,0,,....ماذا؟ لا، أنا هنا لكي
Dialogue: 0,0:37:33.35,0:37:35.78,Default,,0,0,0,,كم نسيت
Dialogue: 0,0:37:36.06,0:37:38.52,Default,,0,0,0,,لدى "ماوي" وقتًا دائمًا لمعجبيه
Dialogue: 0,0:37:40.50,0:37:44.17,Default,,0,0,0,,"نستخدم طائرًا للكتابة، نسمي هذا "التغريد
Dialogue: 0,0:37:48.25,0:37:51.00,Default,,0,0,0,,أعلم أنك لا تحصلين على فرصة\Nكل يوم للقاء بطلك
Dialogue: 0,0:37:51.74,0:37:56.84,Default,,0,0,0,,أنت لست بطلي، ولم آت إلى هنا\Nلتوقع على مجدافي
Dialogue: 0,0:37:57.00,0:37:59.40,Default,,0,0,0,,"أنا هنا، لأنك سرقت قلب "تيفيتي
Dialogue: 0,0:37:59.48,0:38:03.38,Default,,0,0,0,,وسوف تبحر بقاربي عبر البحر
Dialogue: 0,0:38:03.38,0:38:05.03,Default,,0,0,0,,وتعديده إلى مكانه
Dialogue: 0,0:38:05.23,0:38:06.68,Default,,0,0,0,,حسنًا
Dialogue: 0,0:38:07.75,0:38:10.69,Default,,0,0,0,,بدا أنك تمقتينني وهذا مستحيل
Dialogue: 0,0:38:10.70,0:38:13.16,Default,,0,0,0,,لأنني علقت هنا لقرابة ألف عام
Dialogue: 0,0:38:13.16,0:38:15.78,Default,,0,0,0,,محاولًا جلب القلب وتقديمه\Nكهديه لكم أيها الفانون
Dialogue: 0,0:38:15.87,0:38:19.09,Default,,0,0,0,,حتى يتسنى لكم امتلاك\Nالقوة الكفيلة بخلق حياة
Dialogue: 0,0:38:19.58,0:38:23.85,Default,,0,0,0,,أجل، فيبدو ما تحاولين قوله هو شكرًا لك
Dialogue: 0,0:38:23.85,0:38:25.46,Default,,0,0,0,,شكرًا لك؟ -\Nعلى الرحب -
Dialogue: 0,0:38:25.46,0:38:28.00,Default,,0,0,0,,...ماذا؟ لم أقصد
Dialogue: 0,0:38:28.23,0:38:29.78,Default,,0,0,0,,...ولم قد أقول -\Nلا بأس -
Dialogue: 0,0:38:31.02,0:38:33.67,Default,,0,0,0,,أظن أنني فهمت الأمر"
Dialogue: 0,0:38:33.67,0:38:37.13,Default,,0,0,0,,تقفين في مواجهه العظمة وعجائبها
Dialogue: 0,0:38:37.13,0:38:40.99,Default,,0,0,0,,ولا تعلمين ما هو شعورك، كم هذا رائع
Dialogue: 0,0:38:41.41,0:38:44.21,Default,,0,0,0,,من الجيد رؤية أن البشر لم يتغيروا
Dialogue: 0,0:38:44.21,0:38:47.67,Default,,0,0,0,,افتحي عينيك ولنبدأ
Dialogue: 0,0:38:47.84,0:38:50.67,Default,,0,0,0,,أجل، أنا "ماوي" حقًا\Nاستشعري الأمر
Dialogue: 0,0:38:51.16,0:38:54.82,Default,,0,0,0,,أعلم من الصعب رؤية
Dialogue: 0,0:38:55.30,0:38:57.77,Default,,0,0,0,,نصف إله بشحمه ولحمه
Dialogue: 0,0:38:58.56,0:39:02.27,Default,,0,0,0,,وماذا أقول سوى على الرحب
Dialogue: 0,0:39:02.27,0:39:05.41,Default,,0,0,0,,على المد والجزر والشمس والسماء
Dialogue: 0,0:39:05.60,0:39:09.32,Default,,0,0,0,,لا بأس على الإطلاق، على الرحب
Dialogue: 0,0:39:10.00,0:39:12.76,Default,,0,0,0,,أنا نصف إله عادي فحسب
Dialogue: 0,0:39:12.77,0:39:16.01,Default,,0,0,0,,من لديه إصبعين ليرفع السماء؟
Dialogue: 0,0:39:16.01,0:39:18.95,Default,,0,0,0,,عندما كنت صغيرة\Nأنا هو
Dialogue: 0,0:39:19.48,0:39:24.08,Default,,0,0,0,,عندما اشتد البرد\Nمن جلب لكم النار من منشأها؟
Dialogue: 0,0:39:24.08,0:39:25.84,Default,,0,0,0,,أنت تنظرين إليه الآن
Dialogue: 0,0:39:25.85,0:39:30.22,Default,,0,0,0,,نسيت، كما أنني ألجمت الشمس
Dialogue: 0,0:39:30.22,0:39:31.26,Default,,0,0,0,,على الرحب
Dialogue: 0,0:39:31.26,0:39:33.82,Default,,0,0,0,,لكي يطيل يومك وتحظين بالمرح
Dialogue: 0,0:39:33.89,0:39:37.43,Default,,0,0,0,,كما أنني سخرت النسيم
Dialogue: 0,0:39:37.43,0:39:40.76,Default,,0,0,0,,على الرحب، لتحمل شراعكم وتحرك أشجاركم
Dialogue: 0,0:39:41.05,0:39:44.73,Default,,0,0,0,,وماذا أقول سوى على الرحب
Dialogue: 0,0:39:45.03,0:39:48.07,Default,,0,0,0,,على الجزر التي أخرجتها من البحر
Dialogue: 0,0:39:48.16,0:39:51.89,Default,,0,0,0,,لا حاجة للصلاة، لا بأس. على الرحب
Dialogue: 0,0:39:51.89,0:39:57.14,Default,,0,0,0,,أعتقد هذه شخصيتي، على الرحب
Dialogue: 0,0:39:57.60,0:39:59.34,Default,,0,0,0,,على الرحب
Dialogue: 0,0:39:59.85,0:40:03.64,Default,,0,0,0,,فكري بالأمر، أيتها الطفلة\Nصدقًا، أستطيع مواصلة الحديث
Dialogue: 0,0:40:03.64,0:40:05.54,Default,,0,0,0,,أستطيع تفسير كل ظاهرة طبيعية
Dialogue: 0,0:40:05.54,0:40:07.00,Default,,0,0,0,,المد والجزر والحشائش والأرض
Dialogue: 0,0:40:07.00,0:40:08.81,Default,,0,0,0,,كل هذا بسبب "ماوي" العابث
Dialogue: 0,0:40:08.81,0:40:10.33,Default,,0,0,0,,قتلت إنقليسًا ودفنت أحشائة
Dialogue: 0,0:40:10.36,0:40:12.15,Default,,0,0,0,,نمت شجرة، والآن لديكم جوز الهند
Dialogue: 0,0:40:12.15,0:40:14.08,Default,,0,0,0,,ما المخزي من كل ذلك؟
Dialogue: 0,0:40:14.09,0:40:16.04,Default,,0,0,0,,لا تعبث مع "ماوي" وهو يتقاتل
Dialogue: 0,0:40:16.04,0:40:19.26,Default,,0,0,0,,وذلك الوشم على جسدي هو خريطة لانتصاراتي
Dialogue: 0,0:40:19.26,0:40:21.20,Default,,0,0,0,,انظري إلى ما وصلت إليه\Nأصنع كل شيء
Dialogue: 0,0:40:21.20,0:40:23.49,Default,,0,0,0,,انظري إلى هذا الصغير
Dialogue: 0,0:40:27.35,0:40:30.99,Default,,0,0,0,,على كل حال، دعيني أقول لك على الرحب
Dialogue: 0,0:40:31.20,0:40:33.99,Default,,0,0,0,,للعالم البديع الذي تعرفيه
Dialogue: 0,0:40:34.48,0:40:37.89,Default,,0,0,0,,لا بأس على الإطلاق، على الرحب
Dialogue: 0,0:40:38.69,0:40:41.46,Default,,0,0,0,,فكري في الأمر، عليّ الذهاب
Dialogue: 0,0:40:41.46,0:40:44.98,Default,,0,0,0,,إنه يومك الخاص، على الرحب
Dialogue: 0,0:40:45.80,0:40:48.16,Default,,0,0,0,,لأنني بحاجة إلى هذا القارب
Dialogue: 0,0:40:48.69,0:40:52.54,Default,,0,0,0,,سأبحر به بعيدًا، على الرحب
Dialogue: 0,0:40:53.00,0:40:55.53,Default,,0,0,0,,لأن "ماوي" يفعل كل شيء عدا أن يسبح
Dialogue: 0,0:40:55.53,0:40:59.54,Default,,0,0,0,,على الرحب -\N"على الرحب -
Dialogue: 0,0:41:00.92,0:41:02.13,Default,,0,0,0,,وشكرًا لك
Dialogue: 0,0:41:04.16,0:41:06.19,Default,,0,0,0,,يا أنت، دعني أخرج
Dialogue: 0,0:41:06.19,0:41:08.32,Default,,0,0,0,,...أيها الكاذب والمحتال وابن
Dialogue: 0,0:41:10.11,0:41:11.74,Default,,0,0,0,,على الرحب
Dialogue: 0,0:41:20.63,0:41:23.24,Default,,0,0,0,,لا، لن أذهب إلى "تيفيتي" مع طفلة
Dialogue: 0,0:41:23.24,0:41:26.37,Default,,0,0,0,,سأجلب خطافي، لديك خطافك\Nوأنا ليس لي قيمة بدونه
Dialogue: 0,0:41:28.33,0:41:29.93,Default,,0,0,0,,حسنًا، تحدث مع نفسك
Dialogue: 0,0:41:35.30,0:41:36.37,Default,,0,0,0,,وجبة خفيفة في القارب
Dialogue: 0,0:42:02.74,0:42:05.64,Default,,0,0,0,,تمكنت من الافتلات\Nمن كومة الأحجار المتسخة تلك
Dialogue: 0,0:42:06.37,0:42:08.99,Default,,0,0,0,,لا، لا تنظر إليّ هكذا
Dialogue: 0,0:42:08.99,0:42:11.40,Default,,0,0,0,,إنه كهف جميل، ستحبه
Dialogue: 0,0:42:12.38,0:42:15.38,Default,,0,0,0,,وأنا سألتهمك في بطني
Dialogue: 0,0:42:16.10,0:42:18.00,Default,,0,0,0,,لنسمنك أيها النحيف
Dialogue: 0,0:42:41.40,0:42:43.56,Default,,0,0,0,,لن أحرك ساكنًا
Dialogue: 0,0:42:43.56,0:42:45.35,Default,,0,0,0,,حسنًا، استمتعي بالجزيرة
Dialogue: 0,0:42:45.35,0:42:48.19,Default,,0,0,0,,"تحرك يا "ماوي -\Nلا، توقف -
Dialogue: 0,0:42:48.50,0:42:51.85,Default,,0,0,0,,يا أنت، يجب عليك إرجاع القلب
Dialogue: 0,0:43:07.16,0:43:09.19,Default,,0,0,0,,لم أتوقع ذلك
Dialogue: 0,0:43:10.79,0:43:15.09,Default,,0,0,0,,"أنا "موانا" بنت قرية "موتنوي\Nوهذا قارب الـ"كانو" الخاص بي
Dialogue: 0,0:43:15.29,0:43:17.65,Default,,0,0,0,,...وسوف تبحر لترجع
Dialogue: 0,0:43:20.39,0:43:22.76,Default,,0,0,0,,انس الأمر، علينا الذهاب
Dialogue: 0,0:43:24.36,0:43:28.25,Default,,0,0,0,,وعادت مجددًا -\N"أنا "موانا" بنت قرية "موتونوي -
Dialogue: 0,0:43:32.90,0:43:34.77,Default,,0,0,0,,اسمك "موانا"، صحيح؟
Dialogue: 0,0:43:34.77,0:43:38.56,Default,,0,0,0,,أجل، وسوف تعيد القلب
Dialogue: 0,0:43:49.20,0:43:51.02,Default,,0,0,0,,حسنًا، أنا أنسحب
Dialogue: 0,0:43:55.77,0:43:59.97,Default,,0,0,0,,بحقك -\Nما هي مشكلتك؟ -
Dialogue: 0,0:44:01.00,0:44:03.65,Default,,0,0,0,,هل أنت خائف منه؟
Dialogue: 0,0:44:03.65,0:44:06.77,Default,,0,0,0,,لا، لست خائفًا
Dialogue: 0,0:44:10.34,0:44:12.58,Default,,0,0,0,,لا تتدخل وإلا جعلتك تنام تحت إبطي
Dialogue: 0,0:44:12.58,0:44:16.53,Default,,0,0,0,,توقفي، هذا ليس قلبًا\Nإنه لعنة
Dialogue: 0,0:44:16.54,0:44:19.08,Default,,0,0,0,,في اللحظة التي أخذته، صفعتني السماء
Dialogue: 0,0:44:19.09,0:44:21.75,Default,,0,0,0,,وفقدت خطافي، أبعديه عني
Dialogue: 0,0:44:21.98,0:44:23.64,Default,,0,0,0,,أبعد هذا بعيدًا؟
Dialogue: 0,0:44:23.64,0:44:27.16,Default,,0,0,0,,توقفي عند حدك، أنا نصف إله\Nسأضربك بشدة
Dialogue: 0,0:44:27.39,0:44:29.74,Default,,0,0,0,,هل تريدين أن أضربك؟
Dialogue: 0,0:44:31.10,0:44:33.69,Default,,0,0,0,,استمعي، هذا القلب لا يمنحك القوة\Nالكفيلة بخلق حياة
Dialogue: 0,0:44:34.01,0:44:36.03,Default,,0,0,0,,إنه يقود مباشرة للموت
Dialogue: 0,0:44:36.03,0:44:38.56,Default,,0,0,0,,إن لم تبعديه، ستأتي كائنات لأجله
Dialogue: 0,0:44:38.56,0:44:40.68,Default,,0,0,0,,تأتي لأجل هذا القلب؟
Dialogue: 0,0:44:40.68,0:44:42.88,Default,,0,0,0,,تعني هذا القلب الذي بيدي -\Nأخبرتك، أخفضي صوتك -
Dialogue: 0,0:44:42.88,0:44:44.38,Default,,0,0,0,,تعال واحصل عليه
Dialogue: 0,0:44:44.38,0:44:45.99,Default,,0,0,0,,ستعرضيننا للموت
Dialogue: 0,0:44:45.99,0:44:49.68,Default,,0,0,0,,لا، أنا سأذهب إلى "تيفيتي"، حتى تعيد القلب
Dialogue: 0,0:44:49.68,0:44:51.56,Default,,0,0,0,,شكرًا لك، على الرحب
Dialogue: 0,0:44:56.81,0:44:59.06,Default,,0,0,0,,"كائنات الـ"كاكامورا -\Nماذا؟ -
Dialogue: 0,0:44:59.26,0:45:00.91,Default,,0,0,0,,قراصنة صغيرة مُقالتة
Dialogue: 0,0:45:01.85,0:45:04.67,Default,,0,0,0,,أتساءل لماذا هم هنا؟
Dialogue: 0,0:45:08.99,0:45:11.86,Default,,0,0,0,,إنها تبدو ظريفة
Dialogue: 0,0:45:29.26,0:45:33.36,Default,,0,0,0,,ساعدنا أيها المحيط، افعل شيئًا -\Nلن يساعدك المحيط -
Dialogue: 0,0:45:33.36,0:45:36.08,Default,,0,0,0,,ساعدي نفسك، اطوي الشراع\Nوشدى الحبل
Dialogue: 0,0:45:37.97,0:45:42.49,Default,,0,0,0,,لا تعرفين الإبحار؟ -\Nأستطيع تعليم نفسي -
Dialogue: 0,0:45:54.16,0:45:55.86,Default,,0,0,0,,ألا يمكنك التحول أو أي شيء؟
Dialogue: 0,0:45:56.06,0:45:57.37,Default,,0,0,0,,هل رأيت خطافي؟
Dialogue: 0,0:45:57.37,0:45:59.60,Default,,0,0,0,,بدون الخطاف المسحور، لا وجود لقوة سحرية
Dialogue: 0,0:46:24.69,0:46:26.83,Default,,0,0,0,,قاربهم يتشكل إلى قوراب منفصلة
Dialogue: 0,0:46:46.54,0:46:48.87,Default,,0,0,0,,أجل، فعلت ذلك للتو
Dialogue: 0,0:46:54.34,0:46:57.38,Default,,0,0,0,,"لا تبتلعه، "هي هي
Dialogue: 0,0:47:11.91,0:47:14.47,Default,,0,0,0,,يا "ماوي"، لقد أخذوا القلب
Dialogue: 0,0:47:16.79,0:47:18.54,Default,,0,0,0,,هذا ديك -\N...القلب بداخل -
Dialogue: 0,0:47:20.25,0:47:22.16,Default,,0,0,0,,علينا استعادته
Dialogue: 0,0:47:26.50,0:47:28.02,Default,,0,0,0,,"افعل شيئًا يا "ماوي
Dialogue: 0,0:47:28.22,0:47:29.75,Default,,0,0,0,,
Dialogue: 0,0:47:42.39,0:47:46.32,Default,,0,0,0,,إنه هناك بالأعلى، أنت تغير اتجاهك؟\Nماذا تفعل؟
Dialogue: 0,0:47:46.85,0:47:48.86,Default,,0,0,0,,أحاول الهرب -\Nوالقلب -
Dialogue: 0,0:47:49.06,0:47:50.68,Default,,0,0,0,,انسيه، لن تتمكني من استعادته
Dialogue: 0,0:47:51.19,0:47:53.05,Default,,0,0,0,,إلى جانب، لديك قلبًا أجمل
Dialogue: 0,0:47:53.50,0:47:56.31,Default,,0,0,0,,وبماذا سأجدف؟
Dialogue: 0,0:47:56.39,0:47:58.70,Default,,0,0,0,,سوف تقتلك لا محالة
Dialogue: 0,0:48:02.60,0:48:04.39,Default,,0,0,0,,جوز الهند
Dialogue: 0,0:48:46.20,0:48:47.75,Default,,0,0,0,,حصلت عليه
Dialogue: 0,0:48:51.37,0:48:52.72,Default,,0,0,0,,ماذا تفعل؟
Dialogue: 0,0:49:08.38,0:49:11.76,Default,,0,0,0,,أجل، نجحنا
Dialogue: 0,0:49:12.56,0:49:16.06,Default,,0,0,0,,مبارك لبقائك على قيد الحياة، أبهرتني
Dialogue: 0,0:49:17.08,0:49:19.24,Default,,0,0,0,,ولكن، ما زلت لم أغير رأي
Dialogue: 0,0:49:20.30,0:49:21.24,Default,,0,0,0,,تريدين الذهاب إلى "تيفيتي"؟
Dialogue: 0,0:49:21.24,0:49:23.53,Default,,0,0,0,,عليك اجتياز محيط بأسره\Nمليء بالمفاجئات غير السارة
Dialogue: 0,0:49:23.62,0:49:25.37,Default,,0,0,0,,"ناهيك عن "تيكا
Dialogue: 0,0:49:26.65,0:49:30.03,Default,,0,0,0,,عفريت النار، هل سبق وهزمت عفريت نار؟
Dialogue: 0,0:49:31.20,0:49:33.47,Default,,0,0,0,,لا، هل فعلت؟
Dialogue: 0,0:49:40.62,0:49:44.25,Default,,0,0,0,,لن أذهب في مهمة انتحارية مع بشرية
Dialogue: 0,0:49:44.92,0:49:49.00,Default,,0,0,0,,لا تستطيعين استعادة القلب بدوني\Nوأنا أرفض الذهاب
Dialogue: 0,0:49:50.23,0:49:53.76,Default,,0,0,0,,سأجلب خطافي، وانتهى النقاش
Dialogue: 0,0:50:00.77,0:50:03.35,Default,,0,0,0,,ستكون بطلًا
Dialogue: 0,0:50:05.11,0:50:07.02,Default,,0,0,0,,هذا يناسبك، صحيح؟
Dialogue: 0,0:50:07.02,0:50:11.59,Default,,0,0,0,,أيتها الفتاة الصغير، أنا بطل -\N...ربما كنت بطلًا ولكن الآن -
Dialogue: 0,0:50:11.62,0:50:16.16,Default,,0,0,0,,"أنت مجرد الرجل الذي سلب قلب "تيفيتي
Dialogue: 0,0:50:16.16,0:50:18.39,Default,,0,0,0,,والرجل الذي أصاب العالم بلعنة
Dialogue: 0,0:50:20.20,0:50:21.52,Default,,0,0,0,,لم تعد بطل أحد
Dialogue: 0,0:50:21.72,0:50:22.84,Default,,0,0,0,,لا أحد؟
Dialogue: 0,0:50:32.80,0:50:37.34,Default,,0,0,0,,ولكن، إن أعدت هذا القلب وأنقذت العالم
Dialogue: 0,0:50:37.34,0:50:40.07,Default,,0,0,0,,ستصير بطل الجميع
Dialogue: 0,0:50:44.52,0:50:49.67,Default,,0,0,0,,ماوي" الرائع"
Dialogue: 0,0:50:50.35,0:50:52.23,Default,,0,0,0,,لن أتمكن من ذلك بدون خطافي
Dialogue: 0,0:50:52.23,0:50:54.39,Default,,0,0,0,,"لن نجتاز "تيكا -\Nلنجلب خطافك إذن -
Dialogue: 0,0:50:54.40,0:50:57.94,Default,,0,0,0,,"سوف نجلب خطافك ثم نقضي على "تيكا\Nونعيد القلب
Dialogue: 0,0:50:58.56,0:51:01.84,Default,,0,0,0,,...إلا إذا لا تود أن تكون\N..."ماوي"
Dialogue: 0,0:51:02.35,0:51:07.22,Default,,0,0,0,,نصف إله الجو والبحر، بطل الجميع؟
Dialogue: 0,0:51:11.13,0:51:14.69,Default,,0,0,0,,أولًا سنجلب خطافي -\Nوبعدها ننقذ العالم -
Dialogue: 0,0:51:14.90,0:51:17.08,Default,,0,0,0,,اتفقنا؟ -\Nاتفقنا-
Dialogue: 0,0:51:21.40,0:51:22.13,Default,,0,0,0,,الأمر يستحق المحاولة
Dialogue: 0,0:51:23.20,0:51:27.54,Default,,0,0,0,,حسنًا، سنبحر شرقًا\N"نحو جحر السرطان "تاماتوي
Dialogue: 0,0:51:29.07,0:51:32.84,Default,,0,0,0,,لا أحد يملك خطافي سوى\Nهذا الآكل البحري ذو العين الدائرية
Dialogue: 0,0:51:45.51,0:51:46.93,Default,,0,0,0,,علمني كيف أبحر
Dialogue: 0,0:51:49.02,0:51:52.45,Default,,0,0,0,,عملي هو أن أبحر مع "ماوي"\Nعبر المحيط الفسيح
Dialogue: 0,0:51:52.95,0:51:56.83,Default,,0,0,0,,أنا من عليه تولي الإبحار
Dialogue: 0,0:51:56.83,0:51:59.53,Default,,0,0,0,,لا يسمى إبحارًا بل الاستكشاف\Nأيتها الأميرة
Dialogue: 0,0:51:59.81,0:52:01.90,Default,,0,0,0,,ليس مجرد أشرعة وعقد
Dialogue: 0,0:52:01.90,0:52:04.53,Default,,0,0,0,,إنه يعني أن تحددي وجهتك بعقلك
Dialogue: 0,0:52:04.73,0:52:08.26,Default,,0,0,0,,وتعلمين أين مكانك قياسًا على خطواتك السابقة
Dialogue: 0,0:52:08.73,0:52:11.38,Default,,0,0,0,,حسنًا، أولًا لست أميرة
Dialogue: 0,0:52:11.38,0:52:13.51,Default,,0,0,0,,أنا ابنة الزعيم -\Nلا فرق -
Dialogue: 0,0:52:13.51,0:52:14.44,Default,,0,0,0,,لا
Dialogue: 0,0:52:14.64,0:52:16.37,Default,,0,0,0,,إن ارديت فستانًا وكان لديك حيوان مساعد
Dialogue: 0,0:52:16.82,0:52:19.49,Default,,0,0,0,,أنت أميرة، ولست مستكشفه
Dialogue: 0,0:52:19.49,0:52:22.22,Default,,0,0,0,,...ولن تكوني، ولن تكوني أي
Dialogue: 0,0:52:28.10,0:52:30.79,Default,,0,0,0,,أهذا كل ما لديك، نبلة في مؤخرتي؟
Dialogue: 0,0:52:36.01,0:52:38.80,Default,,0,0,0,,أنت شريرة
Dialogue: 0,0:52:38.80,0:52:41.56,Default,,0,0,0,,إن كنت تتكلم، تستطيع أن تُعلم
Dialogue: 0,0:52:43.02,0:52:45.02,Default,,0,0,0,,ابدأ بالدرس الأول
Dialogue: 0,0:52:47.50,0:52:50.25,Default,,0,0,0,,اسحبي الشراع، ليس هذا
Dialogue: 0,0:52:51.09,0:52:54.75,Default,,0,0,0,,لا
Dialogue: 0,0:52:56.25,0:52:57.64,Default,,0,0,0,,جربت هذا للتو
Dialogue: 0,0:53:01.42,0:53:05.18,Default,,0,0,0,,أنت تقيسين النجوم ولا تصافحين السماء
Dialogue: 0,0:53:06.67,0:53:09.71,Default,,0,0,0,,إن كان التيار دافئًا\Nفأنت على الطريق الصحيح
Dialogue: 0,0:53:11.47,0:53:15.09,Default,,0,0,0,,إنه بارد، انتظر إنه يزداد دفئًا
Dialogue: 0,0:53:15.75,0:53:19.92,Default,,0,0,0,,هذا مقزز، ما خطبك؟
Dialogue: 0,0:53:36.46,0:53:40.83,Default,,0,0,0,,هل وصلنا؟ أترى، أخبرتك أنني جديرة بفعلها
Dialogue: 0,0:53:49.48,0:53:53.18,Default,,0,0,0,,موتونوي" هل عدت إلى الوطن؟"
Dialogue: 0,0:53:57.00,0:53:59.08,Default,,0,0,0,,"يا "مونا -\Nأبي؟ -
Dialogue: 0,0:53:59.41,0:54:02.18,Default,,0,0,0,,"موانا" -\Nأمي؟ -
Dialogue: 0,0:54:04.06,0:54:05.12,Default,,0,0,0,,ساعديننا
Dialogue: 0,0:54:07.00,0:54:09.51,Default,,0,0,0,,لا -\N"يا "موانا -
Dialogue: 0,0:54:12.59,0:54:14.37,Default,,0,0,0,,هل تستمتعين بقسط الراحة؟
Dialogue: 0,0:54:14.38,0:54:17.05,Default,,0,0,0,,هل تعلمين أن المستكشف الحقيقي لا ينام؟
Dialogue: 0,0:54:17.06,0:54:19.90,Default,,0,0,0,,لذا فهو يصل إلى ما يصبو إليه
Dialogue: 0,0:54:20.29,0:54:23.49,Default,,0,0,0,,ابتهجي، لقد وصلنا
Dialogue: 0,0:54:25.63,0:54:27.59,Default,,0,0,0,,هل أنت متأكد أن هذا السرطان لديه خطافك؟
Dialogue: 0,0:54:27.59,0:54:32.54,Default,,0,0,0,,تاماتوي"؟ سيحصل عليه، إنه قمّام"\Nيجمع الأشياء
Dialogue: 0,0:54:32.54,0:54:34.55,Default,,0,0,0,,أشياء تجعله يبدو جذابًا
Dialogue: 0,0:54:35.71,0:54:40.57,Default,,0,0,0,,وثقي أن خطافي هو أجمل المقنيات\N"بالنسبة إلى "تاماتوي
Dialogue: 0,0:54:41.25,0:54:44.01,Default,,0,0,0,,وهل يعيش بالأعلى؟
Dialogue: 0,0:54:45.48,0:54:49.19,Default,,0,0,0,,...لا، هذا مجرد مدخل إلى
Dialogue: 0,0:54:49.53,0:54:51.72,Default,,0,0,0,,"لالوتاي" -\Nلالوتاي"؟" -
Dialogue: 0,0:54:51.92,0:54:53.52,Default,,0,0,0,,مملكة الوحوش؟
Dialogue: 0,0:54:54.65,0:54:56.73,Default,,0,0,0,,نحن ذاهبان إلى ممكلة الوحوش؟
Dialogue: 0,0:54:56.95,0:55:00.56,Default,,0,0,0,,كلانا؟ لا، بل أنا فحسب\Nوأنت ستمكثين هنا
Dialogue: 0,0:55:00.68,0:55:02.64,Default,,0,0,0,,مع الطائر المرافق
Dialogue: 0,0:55:04.45,0:55:06.24,Default,,0,0,0,,كم أنا رائع، صافحني
Dialogue: 0,0:55:07.49,0:55:10.06,Default,,0,0,0,,بحقك، كانت مزحة جيدة\Nكيف لم تفهمها؟
Dialogue: 0,0:55:10.06,0:55:12.33,Default,,0,0,0,,نعتها بالدجاجة فهناك طائر آخر في القارب
Dialogue: 0,0:55:12.40,0:55:14.09,Default,,0,0,0,,...أعلم أنها بشرية، ولكن ليس هذا ما قصدت
Dialogue: 0,0:55:14.10,0:55:17.15,Default,,0,0,0,,أتعلم، انسَ الأمر\Nلن أشرح لك
Dialogue: 0,0:55:17.20,0:55:18.81,Default,,0,0,0,,لأنه ليس مزاحًا
Dialogue: 0,0:55:33.10,0:55:34.99,Default,,0,0,0,,حسنًا يا ابنة الزعيم
Dialogue: 0,0:55:34.99,0:55:36.83,Default,,0,0,0,,ظننت أنك تفضلين المكوث في القرية
Dialogue: 0,0:55:36.83,0:55:38.69,Default,,0,0,0,,تقبلين الأطفال وأشياء من هذا القبيل
Dialogue: 0,0:55:39.64,0:55:41.40,Default,,0,0,0,,لا أقصد، أحاول استيعاب
Dialogue: 0,0:55:41.40,0:55:43.95,Default,,0,0,0,,...لماذا قرر شعبك إرسال
Dialogue: 0,0:55:44.00,0:55:46.04,Default,,0,0,0,,كيف أصيغها؟ إرسالك
Dialogue: 0,0:55:46.23,0:55:50.49,Default,,0,0,0,,لم يرسلني شعبي؟ بل المحيط
Dialogue: 0,0:55:50.98,0:55:56.30,Default,,0,0,0,,المحيط؟ هذا يبدو معقولًا\Nفأنت لا تجيدين عمل شيء، اختيار موفق
Dialogue: 0,0:55:56.93,0:56:00.35,Default,,0,0,0,,اختارني لهدف ما
Dialogue: 0,0:56:00.36,0:56:02.17,Default,,0,0,0,,إن كان المحيط بالغ الذكاء
Dialogue: 0,0:56:02.17,0:56:04.73,Default,,0,0,0,,لماذا لم يُعد قلب "تيفيتي" فحسب؟
Dialogue: 0,0:56:05.42,0:56:07.08,Default,,0,0,0,,أو يجلب لي خطافي
Dialogue: 0,0:56:07.10,0:56:09.81,Default,,0,0,0,,ولكن يبدو أنه مغفل
Dialogue: 0,0:56:10.35,0:56:12.47,Default,,0,0,0,,ولكنني متأكد أنه أحسن الاختيار
Dialogue: 0,0:56:13.04,0:56:15.11,Default,,0,0,0,,فأنت المختارة
Dialogue: 0,0:56:30.77,0:56:33.77,Default,,0,0,0,,اختارك المحيط لسبب
Dialogue: 0,0:56:34.34,0:56:37.08,Default,,0,0,0,,إن رحت تغنين، سأتقيًا
Dialogue: 0,0:56:37.68,0:56:40.02,Default,,0,0,0,,ماذا إذن، لا أرى أي مدخل
Dialogue: 0,0:56:40.04,0:56:44.46,Default,,0,0,0,,أجل، لأنه يظهر فقط عقب تضحية إنسان
Dialogue: 0,0:56:46.08,0:56:49.04,Default,,0,0,0,,أمزح معك، كم أنا فظ
Dialogue: 0,0:57:12.59,0:57:16.21,Default,,0,0,0,,لا تقلقي، إنها أعمق مما تبدو عليه
Dialogue: 0,0:57:22.43,0:57:25.37,Default,,0,0,0,,ما زلت أسقط
Dialogue: 0,0:57:27.58,0:57:29.14,Default,,0,0,0,,يمكنك فعلها
Dialogue: 0,0:57:30.07,0:57:31.18,Default,,0,0,0,,اذهبي
Dialogue: 0,0:57:52.14,0:57:55.54,Default,,0,0,0,,وهبطنا بسلام
Dialogue: 0,0:57:56.65,0:57:59.37,Default,,0,0,0,,ماذا؟ إنها ليست هنا أيها المغفل
Dialogue: 0,0:57:59.41,0:58:02.12,Default,,0,0,0,,...لن يقفز بشري نحو جحر
Dialogue: 0,0:58:07.47,0:58:09.48,Default,,0,0,0,,حسنًا، لقد ماتت
Dialogue: 0,0:58:10.19,0:58:12.28,Default,,0,0,0,,لنذهب لاستعادة خطافي
Dialogue: 0,0:59:12.99,0:59:15.26,Default,,0,0,0,,"إنه خطاف "ماوي
Dialogue: 0,0:59:15.30,0:59:16.30,Default,,0,0,0,,أجل
Dialogue: 0,0:59:17.37,0:59:19.67,Default,,0,0,0,,آسفة، ظننتك وحشًا
Dialogue: 0,0:59:19.79,0:59:21.91,Default,,0,0,0,,ولكن، وجدت خطافك. وأنت على حق
Dialogue: 0,0:59:21.91,0:59:23.66,Default,,0,0,0,,"يبد أن هذا السرطان الذي يدعى "توموتوي\Nمعجب بخطافك
Dialogue: 0,0:59:23.79,0:59:26.38,Default,,0,0,0,,ابقي هنا -\N...ماذا؟ لا من المفترض أنني -
Dialogue: 0,0:59:26.40,0:59:28.75,Default,,0,0,0,,اسمعي، لقرابة ألف عام
Dialogue: 0,0:59:28.75,0:59:31.10,Default,,0,0,0,,كل ما كنت أفكر فيه هو الاعتناء بشعري
Dialogue: 0,0:59:31.18,0:59:33.75,Default,,0,0,0,,وأن أعيد خطافي، وأصبح عظيمًا مجددًا
Dialogue: 0,0:59:33.87,0:59:37.38,Default,,0,0,0,,...ولم أسمح لبشرية بإفساد هذا الأمر
Dialogue: 0,0:59:37.40,0:59:39.90,Default,,0,0,0,,والتي ليس لديها ما تفعله\N...بداخل جحر وحش سوى
Dialogue: 0,0:59:42.10,0:59:44.93,Default,,0,0,0,,سوى أن تكون طعمًا
Dialogue: 0,0:59:47.02,0:59:50.16,Default,,0,0,0,,يا للروعة! يا أهل الكهف المتلالأ
Dialogue: 0,0:59:50.41,0:59:54.41,Default,,0,0,0,,أنا مجرد فتاة مغطاة بكنز براق
Dialogue: 0,0:59:54.49,0:59:56.82,Default,,0,0,0,,براق
Dialogue: 0,0:59:56.84,0:59:59.08,Default,,0,0,0,,أنت لا تبيعينه -\Nما أفعله جنوني -
Dialogue: 0,0:59:59.09,1:00:00.61,Default,,0,0,0,,سأصعد وأجلبه فحسب
Dialogue: 0,1:00:00.61,1:00:02.13,Default,,0,0,0,,إن صعدتي إلى الأعلى، سيقتلك
Dialogue: 0,1:00:02.22,1:00:03.76,Default,,0,0,0,,التزمي بالخطة فحسب
Dialogue: 0,1:00:04.59,1:00:07.33,Default,,0,0,0,,عندما يخرج، ضلليه
Dialogue: 0,1:00:07.37,1:00:09.29,Default,,0,0,0,,اجعليه يتحدث عن نفسه
Dialogue: 0,1:00:09.30,1:00:11.25,Default,,0,0,0,,إنه يحب التباهي بعظمته
Dialogue: 0,1:00:11.29,1:00:13.45,Default,,0,0,0,,لا بد أنكما تألفان بعضكما
Dialogue: 0,1:00:13.48,1:00:15.81,Default,,0,0,0,,لا، كان ذلك قبل أن اقتلع قدمه
Dialogue: 0,1:00:15.91,1:00:16.81,Default,,0,0,0,,...اقتلعت
Dialogue: 0,1:00:17.88,1:00:18.88,Default,,0,0,0,,يا "ماوي"؟
Dialogue: 0,1:00:26.58,1:00:30.03,Default,,0,0,0,,من لدينا هنا؟
Dialogue: 0,1:00:30.49,1:00:33.21,Default,,0,0,0,,إنها براقة ولامعة
Dialogue: 0,1:00:33.80,1:00:35.07,Default,,0,0,0,,ماذا؟
Dialogue: 0,1:00:36.32,1:00:37.75,Default,,0,0,0,,إنها بشرية
Dialogue: 0,1:00:37.75,1:00:41.06,Default,,0,0,0,,ما الذي تفعلينه هنا في ممكلة الوحوش؟
Dialogue: 0,1:00:41.46,1:00:44.20,Default,,0,0,0,,.اختاري عينًا واحدة، صغيرتي\N...لا أستطيع التركيز
Dialogue: 0,1:00:44.20,1:00:45.63,Default,,0,0,0,,...على ما أقول إن ظللت
Dialogue: 0,1:00:45.63,1:00:47.37,Default,,0,0,0,,اختاري عينًا
Dialogue: 0,1:00:47.77,1:00:50.02,Default,,0,0,0,,أنت كائن صغير وجميل المظهر؟
Dialogue: 0,1:00:50.06,1:00:51.35,Default,,0,0,0,,لا، هذا يخص جدتي
Dialogue: 0,1:00:51.35,1:00:54.12,Default,,0,0,0,,هذا يخص جدتي، لقد التهمت جدتي
Dialogue: 0,1:00:54.12,1:00:56.83,Default,,0,0,0,,واستمر الأمر أسبوعًا لأنها كانت هائلة الحجم
Dialogue: 0,1:00:56.85,1:00:58.30,Default,,0,0,0,,لماذا أنت هنا؟
Dialogue: 0,1:00:59.56,1:01:01.03,Default,,0,0,0,,لأنك مذهل
Dialogue: 0,1:01:01.34,1:01:05.26,Default,,0,0,0,,ونحن البشر سمعنا عن قصة السرطان
Dialogue: 0,1:01:05.33,1:01:08.80,Default,,0,0,0,,والذي أصبح أسطورة، وأردت معرفة ذلك بنفسي
Dialogue: 0,1:01:08.83,1:01:12.86,Default,,0,0,0,,...كيف أصبحت ما عليه
Dialogue: 0,1:01:13.76,1:01:15.23,Default,,0,0,0,,السرطان العظيم؟
Dialogue: 0,1:01:15.32,1:01:19.75,Default,,0,0,0,,هل تحاولين استمالتي لأتحدث عن نفسي؟
Dialogue: 0,1:01:20.48,1:01:22.42,Default,,0,0,0,,لأنه إن كانت هذه رغبتك
Dialogue: 0,1:01:22.45,1:01:24.63,Default,,0,0,0,,سأسعد بالحديث
Dialogue: 0,1:01:25.59,1:01:27.42,Default,,0,0,0,,على هيئة أغنية
Dialogue: 0,1:01:29.40,1:01:33.23,Default,,0,0,0,,إن "توموتوي" لم يكن في السابق هذا الجذاب"
Dialogue: 0,1:01:33.26,1:01:36.03,Default,,0,0,0,,فلقد كنت سرطانًا صغيرًا ومملًا
Dialogue: 0,1:01:36.43,1:01:39.50,Default,,0,0,0,,والآن أنا سعيد كالمحار
Dialogue: 0,1:01:39.83,1:01:42.36,Default,,0,0,0,,لأنني جميل، حبيبتي
Dialogue: 0,1:01:42.97,1:01:46.26,Default,,0,0,0,,هل قالت لك جدتك أنصت إلى قلبك؟
Dialogue: 0,1:01:46.26,1:01:49.00,Default,,0,0,0,,وكوني على سجيتك
Dialogue: 0,1:01:49.34,1:01:52.50,Default,,0,0,0,,لدىّ القدرة أن أسكتها على الفور
Dialogue: 0,1:01:52.83,1:01:56.31,Default,,0,0,0,,فقد كذبت جدتك، أفضل أن أكون لامعًا
Dialogue: 0,1:01:56.31,1:01:59.25,Default,,0,0,0,,مثل كنز يلمع من حطام سفينة قرصان غارقة
Dialogue: 0,1:01:59.39,1:02:02.50,Default,,0,0,0,,تحتاج إلى بعض التنظيف لتبدو لامعًا
Dialogue: 0,1:02:03.76,1:02:05.67,Default,,0,0,0,,أنا ألمع كرقبة امرأة غنية
Dialogue: 0,1:02:06.30,1:02:08.46,Default,,0,0,0,,في ثانية واحدة، ألا تعلمين؟
Dialogue: 0,1:02:08.50,1:02:12.32,Default,,0,0,0,,إن الأسماك غبية تطارد أي شيء يلمع
Dialogue: 0,1:02:12.92,1:02:16.75,Default,,0,0,0,,مبتدئون، وها هم جاؤوا
Dialogue: 0,1:02:16.76,1:02:19.46,Default,,0,0,0,,إلى الشيء اللامع
Dialogue: 0,1:02:19.50,1:02:22.50,Default,,0,0,0,,عشاء أسماك، كم أحب الطعام المجاني
Dialogue: 0,1:02:23.26,1:02:25.95,Default,,0,0,0,,وأنت تبدين كطعام بحري
Dialogue: 0,1:02:26.80,1:02:29.23,Default,,0,0,0,,لا -\Nيا كعكة السرطان -
Dialogue: 0,1:02:33.16,1:02:34.16,Default,,0,0,0,,لقد عدت
Dialogue: 0,1:02:36.16,1:02:38.16,Default,,0,0,0,,"لقد عاد "ماوي
Dialogue: 0,1:02:40.60,1:02:42.16,Default,,0,0,0,,ما قولك يا صديقي الصغير؟
Dialogue: 0,1:02:43.16,1:02:44.83,Default,,0,0,0,,تريدني أن أتحول إلى صقر عملاق؟\Nحالًا
Dialogue: 0,1:02:56.16,1:02:58.49,Default,,0,0,0,,جيد جدًا
Dialogue: 0,1:02:58.86,1:03:01.94,Default,,0,0,0,,لدى "ماوي" الصغير مشكلة مع تحوله
Dialogue: 0,1:03:01.94,1:03:04.16,Default,,0,0,0,,يا نصف الإله الصغير
Dialogue: 0,1:03:04.65,1:03:08.74,Default,,0,0,0,,!يا له من أداء بشع\Nهل حصلت على الخطاف حقًا؟
Dialogue: 0,1:03:08.78,1:03:12.02,Default,,0,0,0,,فلم تعد تستخدمه كما عهدتك يا رجل
Dialogue: 0,1:03:12.05,1:03:15.26,Default,,0,0,0,,رغم ذلك أعترف أنك سبب تغيري
Dialogue: 0,1:03:15.30,1:03:17.72,Default,,0,0,0,,وكذلك للوشم على جسدك
Dialogue: 0,1:03:18.42,1:03:21.47,Default,,0,0,0,,بسببك أصبحت فنانًا
Dialogue: 0,1:03:21.50,1:03:25.04,Default,,0,0,0,,لم أختبأ من قبل، لا أستطيع\Nلأنني لامع للغاية
Dialogue: 0,1:03:25.05,1:03:28.01,Default,,0,0,0,,شاهدني وأنا أومض كألماسة وسط الحجر
Dialogue: 0,1:03:28.30,1:03:31.65,Default,,0,0,0,,اسرق مقتنياتي، وسوف تفضحك بلمعانها
Dialogue: 0,1:03:31.66,1:03:34.50,Default,,0,0,0,,أرسل جيوشك ولكنها لن تقف في وجهي أبدًا
Dialogue: 0,1:03:34.52,1:03:37.40,Default,,0,0,0,,"فصدفتي قاسية للغاية، وأنت يا "ماوي
Dialogue: 0,1:03:37.41,1:03:41.29,Default,,0,0,0,,حاول مرارًا ولكنك لن تكون نصف إله
Dialogue: 0,1:03:41.61,1:03:43.50,Default,,0,0,0,,وتهزم سرطانًا\Nانظر إلىّ
Dialogue: 0,1:03:43.86,1:03:47.83,Default,,0,0,0,,سوف تموت لا محالة، حان وقتي لأقتلع
Dialogue: 0,1:03:48.17,1:03:49.90,Default,,0,0,0,,قلبك الموجوع
Dialogue: 0,1:03:50.34,1:03:55.27,Default,,0,0,0,,بعيدًا من أولئك الذين تخلوا عنك
Dialogue: 0,1:03:55.27,1:03:59.50,Default,,0,0,0,,باحثًا عن حب أولئك البشر
Dialogue: 0,1:03:59.50,1:04:02.50,Default,,0,0,0,,من اقنعك أنك مرغوب به
Dialogue: 0,1:04:02.50,1:04:05.50,Default,,0,0,0,,حاول أن تكون قاسيًا
Dialogue: 0,1:04:05.73,1:04:09.37,Default,,0,0,0,,لكن درعك ليس قويًا كفاية
Dialogue: 0,1:04:10.03,1:04:14.13,Default,,0,0,0,,يا "ماوي" حان الوقت أن تستيقظ
Dialogue: 0,1:04:14.41,1:04:17.50,Default,,0,0,0,,ألم ترَ من قبل كائنًا لامعًا للغاية
Dialogue: 0,1:04:17.62,1:04:20.50,Default,,0,0,0,,اغرسه جيدًا فسيكون آخر ما تراه
Dialogue: 0,1:04:21.09,1:04:24.17,Default,,0,0,0,,هذه حياتي يا صديقي\Nأنا لامع للغاية
Dialogue: 0,1:04:24.18,1:04:27.23,Default,,0,0,0,,والآن سألتهمك، لذا استعد\Nلإلقاء التماسك الأخير
Dialogue: 0,1:04:27.50,1:04:28.95,Default,,0,0,0,,من أجلي
Dialogue: 0,1:04:29.42,1:04:32.50,Default,,0,0,0,,لن تكون بهذا القدر اللمعان
Dialogue: 0,1:04:32.71,1:04:36.86,Default,,0,0,0,,"لا بد أنك تتمنى لو كنت جميلًا ولامعًا
Dialogue: 0,1:04:39.27,1:04:40.50,Default,,0,0,0,,
Dialogue: 0,1:04:41.30,1:04:43.31,Default,,0,0,0,,لدىّ شيء لامع لأجلك
Dialogue: 0,1:04:45.35,1:04:47.60,Default,,0,0,0,,"قلب "تيفيتي
Dialogue: 0,1:04:47.66,1:04:49.72,Default,,0,0,0,,لا تستطيعين الهرب مني
Dialogue: 0,1:04:50.06,1:04:52.50,Default,,0,0,0,,أنت تهربين؟ تستمرين في مفاجأتي
Dialogue: 0,1:04:54.78,1:04:57.65,Default,,0,0,0,,لن تتمكني من الهرب بتلك القدميين الصغيرتين
Dialogue: 0,1:05:01.78,1:05:05.28,Default,,0,0,0,,قوة الخلق في يد القشريات
Dialogue: 0,1:05:05.78,1:05:07.42,Default,,0,0,0,,أين هي؟
Dialogue: 0,1:05:07.78,1:05:08.78,Default,,0,0,0,,علينا الذهاب
Dialogue: 0,1:05:09.78,1:05:11.24,Default,,0,0,0,,وماذا بشأن القلب؟
Dialogue: 0,1:05:11.24,1:05:14.04,Default,,0,0,0,,يمكنه الاحتفاظ به، لدىّ واحد أفضل
Dialogue: 0,1:05:14.78,1:05:17.59,Default,,0,0,0,,أجل، أنا أملك...ماذا؟
Dialogue: 0,1:05:17.78,1:05:19.74,Default,,0,0,0,,"يبدو أنها أخذت حيوان الـ"برنقيل
Dialogue: 0,1:05:19.78,1:05:22.57,Default,,0,0,0,,وغلفته بوميض طحلب حيوي
Dialogue: 0,1:05:22.57,1:05:23.78,Default,,0,0,0,,لتوهمني
Dialogue: 0,1:05:26.58,1:05:27.78,Default,,0,0,0,,تعالا إلى هنا
Dialogue: 0,1:05:34.28,1:05:35.78,Default,,0,0,0,,يا أنتما
Dialogue: 0,1:05:36.48,1:05:37.78,Default,,0,0,0,,هل أحببتما الأغنية؟
Dialogue: 0,1:05:45.78,1:05:48.34,Default,,0,0,0,,نحن أحياء
Dialogue: 0,1:05:49.78,1:05:53.77,Default,,0,0,0,,اسمعيني، أن أقدر ما فعلته بالأسفل
Dialogue: 0,1:05:54.39,1:05:56.65,Default,,0,0,0,,كان يتطلب شجاعة
Dialogue: 0,1:05:56.92,1:05:59.65,Default,,0,0,0,,أنا آسف، أحاول أن أكون صادقًا ولو لمرة
Dialogue: 0,1:05:59.66,1:06:02.06,Default,,0,0,0,,أشعر أنك مشتتة
Dialogue: 0,1:06:02.26,1:06:03.87,Default,,0,0,0,,مستحيل -\Nأحقًا؟ -
Dialogue: 0,1:06:03.88,1:06:05.78,Default,,0,0,0,,...لأنك تنظرين إلىّ كما لو أن لدىّ
Dialogue: 0,1:06:08.78,1:06:09.78,Default,,0,0,0,,رأس قرش
Dialogue: 0,1:06:11.78,1:06:13.14,Default,,0,0,0,,هل لديك رأس قرش؟
Dialogue: 0,1:06:13.34,1:06:14.50,Default,,0,0,0,,... لأنه أنا -\Nانظري، المغزى -
Dialogue: 0,1:06:15.54,1:06:18.16,Default,,0,0,0,,أنه بالنسبة لفتاة مثلك صغيرة
Dialogue: 0,1:06:18.16,1:06:20.78,Default,,0,0,0,,والتي ليس لديها ما تفعله بالأسفل
Dialogue: 0,1:06:21.08,1:06:22.74,Default,,0,0,0,,لقد أسديت لي معروفًا
Dialogue: 0,1:06:22.78,1:06:24.78,Default,,0,0,0,,ولكنك شارفت على الموت أيضًا
Dialogue: 0,1:06:24.88,1:06:27.12,Default,,0,0,0,,ولم أستطع حتى هزيمة ذلك السرطان الأحمق
Dialogue: 0,1:06:27.13,1:06:29.65,Default,,0,0,0,,"لذا الفرصة في هزيمة "تيكا
Dialogue: 0,1:06:30.78,1:06:33.78,Default,,0,0,0,,لن نصل أبدًا إلى "تيفيتي" هذه الرحلة ملعونة
Dialogue: 0,1:06:34.46,1:06:35.78,Default,,0,0,0,,ليست ملعونة
Dialogue: 0,1:06:36.78,1:06:39.78,Default,,0,0,0,,ورأس القرس -\Nليست ملعونة -
Dialogue: 0,1:06:54.58,1:06:55.78,Default,,0,0,0,,ملعونة
Dialogue: 0,1:06:59.78,1:07:03.54,Default,,0,0,0,,ماذا أقول سوى أننا سنموت قريبًا
Dialogue: 0,1:07:03.78,1:07:06.02,Default,,0,0,0,,سنموت قريبًا
Dialogue: 0,1:07:06.62,1:07:08.78,Default,,0,0,0,,ألا يمكنك المحاولة على الأقل؟
Dialogue: 0,1:07:11.28,1:07:12.78,Default,,0,0,0,,حولني إلى صقر عملاق
Dialogue: 0,1:07:15.78,1:07:18.97,Default,,0,0,0,,لا بأس، سنموت قريبًا
Dialogue: 0,1:07:19.01,1:07:20.59,Default,,0,0,0,,حسنًا، انتهى وقت الاستراحة
Dialogue: 0,1:07:20.79,1:07:22.17,Default,,0,0,0,,انهض -\Nولماذا؟ -
Dialogue: 0,1:07:22.18,1:07:24.17,Default,,0,0,0,,هل ستلقين علىّ وعظًا
Dialogue: 0,1:07:24.17,1:07:27.78,Default,,0,0,0,,"وتخبرينني أن بإمكاني هزيمة "تيكا\Nلأنني "ماوي"؟
Dialogue: 0,1:07:29.78,1:07:31.45,Default,,0,0,0,,اغرب عن وجهي أيها الصغير
Dialogue: 0,1:07:36.71,1:07:39.78,Default,,0,0,0,,من رسم لك تلك الوشوم؟
Dialogue: 0,1:07:39.88,1:07:42.22,Default,,0,0,0,,ظهرت فجأة لأنني من جلبها
Dialogue: 0,1:07:42.78,1:07:45.78,Default,,0,0,0,,وكيف جلبت هذا الوشم؟ ما قصته؟
Dialogue: 0,1:07:45.88,1:07:50.38,Default,,0,0,0,,"هذا رجل اكتشف"الليسما -\Nما هي"الليسما"؟ -
Dialogue: 0,1:07:50.58,1:07:52.13,Default,,0,0,0,,ليس من شأنك
Dialogue: 0,1:07:53.49,1:07:55.41,Default,,0,0,0,,لن أنفك عن السؤال
Dialogue: 0,1:07:57.38,1:08:00.78,Default,,0,0,0,,ما قصتها؟ -\Nتوقفي عن فعل ذلك -
Dialogue: 0,1:08:05.88,1:08:06.87,Default,,0,0,0,,ابتعدي
Dialogue: 0,1:08:07.07,1:08:08.86,Default,,0,0,0,,أخبرني ما قصتها فحسب -\Nقلت ابتعدي -
Dialogue: 0,1:08:09.03,1:08:11.41,Default,,0,0,0,,أهي السبب وراء تعطل خطافك؟
Dialogue: 0,1:08:26.93,1:08:30.16,Default,,0,0,0,,لا تود الحديث، لا تتحدث
Dialogue: 0,1:08:30.32,1:08:33.93,Default,,0,0,0,,تريد إلقائي من القارب؟ افعل ذلك
Dialogue: 0,1:08:34.33,1:08:37.83,Default,,0,0,0,,أتريد إخباري أنني لست على دراية بما أفعل
Dialogue: 0,1:08:37.93,1:08:40.19,Default,,0,0,0,,أعلم ذلك
Dialogue: 0,1:08:40.71,1:08:43.93,Default,,0,0,0,,ليس لدىّ أدنى فكرة لماذا اختارني المحيط
Dialogue: 0,1:08:43.93,1:08:45.75,Default,,0,0,0,,أنت محق
Dialogue: 0,1:08:47.51,1:08:53.66,Default,,0,0,0,,ولكن جزيرتي تحتضر، لهذا السبب أنا هنا
Dialogue: 0,1:08:54.93,1:09:00.29,Default,,0,0,0,,لا يوجد سوانا نحن الاثنين، أود مساعدتك
Dialogue: 0,1:09:00.58,1:09:04.93,Default,,0,0,0,,ولكنني لن اقدر على ذلك، إن لم تسمح لي
Dialogue: 0,1:09:09.93,1:09:14.85,Default,,0,0,0,,لم أولد نصف إله، كان لدىّ والدان بشريان
Dialogue: 0,1:09:15.93,1:09:16.93,Default,,0,0,0,,...كانا
Dialogue: 0,1:09:17.93,1:09:19.63,Default,,0,0,0,,...نظرا إلى بعضهما
Dialogue: 0,1:09:19.93,1:09:24.38,Default,,0,0,0,,وقررا أنهما ليسا بحاجة إلىّ
Dialogue: 0,1:09:24.93,1:09:29.41,Default,,0,0,0,,ورمياني إلى البحر، كما لو أنني نكرة
Dialogue: 0,1:09:31.93,1:09:34.93,Default,,0,0,0,,بطريقة ما وجدتني الآلهة
Dialogue: 0,1:09:35.36,1:09:37.74,Default,,0,0,0,,ومنحوني الخطاف
Dialogue: 0,1:09:37.93,1:09:40.93,Default,,0,0,0,,"وصنعوا مني "ماوي
Dialogue: 0,1:09:41.93,1:09:44.93,Default,,0,0,0,,ورجعت إلى حيث أنتمي
Dialogue: 0,1:09:45.29,1:09:48.76,Default,,0,0,0,,أمددتهم بالجزر والنار وجوز الهند
Dialogue: 0,1:09:49.93,1:09:51.93,Default,,0,0,0,,كل ما تمنوه
Dialogue: 0,1:09:52.93,1:09:55.66,Default,,0,0,0,,سلبت القلب لأجلهم
Dialogue: 0,1:09:55.93,1:09:59.54,Default,,0,0,0,,فعلت كل شيء لأجلهم
Dialogue: 0,1:09:59.93,1:10:04.93,Default,,0,0,0,,لذا أحبوك -\Nلم يكن ما فعلته كافيًا -
Dialogue: 0,1:10:13.63,1:10:16.83,Default,,0,0,0,,ربما عثرت عليك الآلهة لسبب ما
Dialogue: 0,1:10:16.93,1:10:19.93,Default,,0,0,0,,ربما سلمك المحيط إليهم
Dialogue: 0,1:10:20.53,1:10:23.93,Default,,0,0,0,,لأنه رأي شخصًا يستحق الإنقاذ
Dialogue: 0,1:10:25.73,1:10:28.93,Default,,0,0,0,,ولكن الآلهة لم تجعلك ما أنت عليه
Dialogue: 0,1:10:29.93,1:10:31.82,Default,,0,0,0,,بل أنت من فعل
Dialogue: 0,1:10:40.73,1:10:45.93,Default,,0,0,0,,حسنًا، أحبك أيضًا يا صديقي
Dialogue: 0,1:11:51.93,1:11:52.93,Default,,0,0,0,,مرحى
Dialogue: 0,1:12:16.93,1:12:19.80,Default,,0,0,0,,"محطتنا القادمة "تيفيتي
Dialogue: 0,1:13:06.53,1:13:09.44,Default,,0,0,0,,ماذا؟ -\Nلقد فهمت الأمر -
Dialogue: 0,1:13:10.75,1:13:14.13,Default,,0,0,0,,أتعلمين؟ لقد أحبني المحيط عندما أخرجت جزر
Dialogue: 0,1:13:14.69,1:13:17.77,Default,,0,0,0,,لأن أجدادك سوف يبحرون ويجدونها
Dialogue: 0,1:13:18.79,1:13:21.67,Default,,0,0,0,,كل هذه الجزر والقرى الجديدة
Dialogue: 0,1:13:21.93,1:13:24.93,Default,,0,0,0,,كان البحر من ربط فيما بينهم جميعًا
Dialogue: 0,1:13:25.03,1:13:28.93,Default,,0,0,0,,...وإن كنت مكان المحيط، أظن أنني سأبحث عن
Dialogue: 0,1:13:28.98,1:13:31.33,Default,,0,0,0,,فتاة ذات شعر مموج وليست أميرة
Dialogue: 0,1:13:31.83,1:13:35.93,Default,,0,0,0,,لتبدأ ذلك من جديد -\Nهذا حقًا ألطف شيء -
Dialogue: 0,1:13:35.94,1:13:38.55,Default,,0,0,0,,قلته لي
Dialogue: 0,1:13:38.93,1:13:41.73,Default,,0,0,0,,"كان ينبغي أن تحفظه لـ"تيفيتي
Dialogue: 0,1:13:42.93,1:13:44.69,Default,,0,0,0,,أنا أحفظه بالفعل لها
Dialogue: 0,1:13:46.93,1:13:49.89,Default,,0,0,0,,يا "موانا" بنت "موتونوي"، أنا مؤمن
Dialogue: 0,1:13:49.93,1:13:54.65,Default,,0,0,0,,أنك أبحرت بـ "ماوي" رسميًا عبر المحيط الفسيح
Dialogue: 0,1:13:55.93,1:13:58.76,Default,,0,0,0,,"لتحيا "موانا
Dialogue: 0,1:13:58.83,1:14:00.93,Default,,0,0,0,,أنت رائعة
Dialogue: 0,1:14:02.36,1:14:03.93,Default,,0,0,0,,حان الوقت
Dialogue: 0,1:14:21.93,1:14:23.94,Default,,0,0,0,,اذهب وأنقذ العالم
Dialogue: 0,1:14:46.93,1:14:47.93,Default,,0,0,0,,"ماوي"
Dialogue: 0,1:15:22.93,1:15:25.33,Default,,0,0,0,,ماذا تفعلين؟ -\Nأحاول إيجاد أفضل طريقة للعبور -
Dialogue: 0,1:15:27.51,1:15:28.92,Default,,0,0,0,,لن نستطيع العبور -\Nبل سنعبر -
Dialogue: 0,1:15:29.12,1:15:30.33,Default,,0,0,0,,دوري للخلف -\Nلا -
Dialogue: 0,1:15:30.45,1:15:32.27,Default,,0,0,0,,"توقفي يا "موانا -\Nلا -
Dialogue: 0,1:16:00.93,1:16:02.98,Default,,0,0,0,,هل أنت بخير؟
Dialogue: 0,1:16:03.93,1:16:05.89,Default,,0,0,0,,ماوي"؟"
Dialogue: 0,1:16:12.93,1:16:15.18,Default,,0,0,0,,أخبرتك أن تعودي للخلف
Dialogue: 0,1:16:16.93,1:16:20.15,Default,,0,0,0,,ظننت أننا سننجح -\Nكلانا؟ -
Dialogue: 0,1:16:21.93,1:16:24.73,Default,,0,0,0,,ظننت أنني سأنجح
Dialogue: 0,1:16:26.43,1:16:27.43,Default,,0,0,0,,يمكننا إصلاحه
Dialogue: 0,1:16:27.43,1:16:31.66,Default,,0,0,0,,صنعته الآلهة، لا تستطيعين إصلاحه
Dialogue: 0,1:16:32.07,1:16:34.13,Default,,0,0,0,,سنكون أكثر حيطة المرة القادمة
Dialogue: 0,1:16:34.43,1:16:37.43,Default,,0,0,0,,كان "تيكا" عالقًا في جزر المدخل وهي كالحمم
Dialogue: 0,1:16:37.48,1:16:40.83,Default,,0,0,0,,لا يستطيع الاقتراب من الماء\Nيمكننا البحث عن مدخل ما
Dialogue: 0,1:16:41.30,1:16:43.39,Default,,0,0,0,,لن أعود
Dialogue: 0,1:16:43.43,1:16:45.43,Default,,0,0,0,,ما زال علينا إعادة القلب
Dialogue: 0,1:16:45.63,1:16:47.43,Default,,0,0,0,,لقد تصدع خطافي
Dialogue: 0,1:16:47.44,1:16:49.08,Default,,0,0,0,,وسينتهى تمامًا بضربة أخرى
Dialogue: 0,1:16:49.28,1:16:51.73,Default,,0,0,0,,يا "ماوي" عليك إعادة القلب
Dialogue: 0,1:16:51.74,1:16:55.10,Default,,0,0,0,,أنا لا أساوي شيئًا دون خطافي -\Nهذا ليس صحيحًا -
Dialogue: 0,1:16:55.11,1:16:57.99,Default,,0,0,0,,أنا لا أساوي شيئًا دون خطافي
Dialogue: 0,1:17:07.33,1:17:11.43,Default,,0,0,0,,نحن هنا بسبب أنك سلبت القلب منذ البداية
Dialogue: 0,1:17:13.13,1:17:15.29,Default,,0,0,0,,بل نحن هنا لأن المحيط أخبرك
Dialogue: 0,1:17:15.29,1:17:17.74,Default,,0,0,0,,أنك مميزة وصدقته
Dialogue: 0,1:17:18.43,1:17:21.43,Default,,0,0,0,,"أنا "موانا" بنت قرية "موتونوي
Dialogue: 0,1:17:21.48,1:17:23.81,Default,,0,0,0,,ستركب قاربي -\N"إلى اللقاء يا "موانا -
Dialogue: 0,1:17:23.81,1:17:26.43,Default,,0,0,0,,وتبحر به عبر المحيط -\Nلن أعرض نفسي للقتل -
Dialogue: 0,1:17:26.43,1:17:28.03,Default,,0,0,0,,حتى تثبتي لنفسك أن لك أهمية\Nوأنت لست كذلك
Dialogue: 0,1:17:28.03,1:17:32.14,Default,,0,0,0,,وتعيد قلب "تيفيتي" فقد اختارني المحيط
Dialogue: 0,1:17:33.23,1:17:35.19,Default,,0,0,0,,اختيار غير موفق
Dialogue: 0,1:17:44.43,1:17:45.99,Default,,0,0,0,,"ماوي"
Dialogue: 0,1:18:00.43,1:18:02.94,Default,,0,0,0,,لماذا أحضرتني إلى هنا؟
Dialogue: 0,1:18:08.10,1:18:10.42,Default,,0,0,0,,لست الشخص المناسب
Dialogue: 0,1:18:12.43,1:18:15.92,Default,,0,0,0,,عليك اختيار شخصًا آخر
Dialogue: 0,1:18:18.11,1:18:20.61,Default,,0,0,0,,اختر شخصًا آخر
Dialogue: 0,1:18:21.43,1:18:23.31,Default,,0,0,0,,أرجوك
Dialogue: 0,1:18:58.43,1:19:01.43,Default,,0,0,0,,لقد جاوزت الحيد كثيرًا
Dialogue: 0,1:19:02.43,1:19:04.15,Default,,0,0,0,,جدتي؟
Dialogue: 0,1:19:05.43,1:19:08.43,Default,,0,0,0,,أظن أنني اخترت الوشم المناسب
Dialogue: 0,1:19:09.23,1:19:10.80,Default,,0,0,0,,جدتي
Dialogue: 0,1:19:15.43,1:19:18.22,Default,,0,0,0,,لقد حاولت يا جدتي
Dialogue: 0,1:19:19.43,1:19:23.79,Default,,0,0,0,,لم أستطع فعلها -\Nإنه ليس ذنبك -
Dialogue: 0,1:19:24.43,1:19:28.40,Default,,0,0,0,,ما كان يجب أن أثقل على كاهلك
Dialogue: 0,1:19:29.33,1:19:34.43,Default,,0,0,0,,إن أردت العودة إلى الوطن، سأكون بجانبك
Dialogue: 0,1:19:51.43,1:19:55.43,Default,,0,0,0,,لماذا أنت مترددة؟ -\Nلا أعلم -
Dialogue: 0,1:19:59.43,1:20:02.48,Default,,0,0,0,,أعلم فتاة من أحد الجزر"
Dialogue: 0,1:20:02.98,1:20:05.43,Default,,0,0,0,,تختلف عن الجميع
Dialogue: 0,1:20:06.17,1:20:09.06,Default,,0,0,0,,تحب البحر وأهلها
Dialogue: 0,1:20:09.29,1:20:12.38,Default,,0,0,0,,وتُشعر عائلتها بالفخر
Dialogue: 0,1:20:12.83,1:20:16.03,Default,,0,0,0,,قد يتكابل عليك العالم
Dialogue: 0,1:20:16.31,1:20:19.18,Default,,0,0,0,,وتترك التجارب بك جرحًا
Dialogue: 0,1:20:19.18,1:20:24.43,Default,,0,0,0,,ولكنها من تصنعك في النهاية
Dialogue: 0,1:20:25.43,1:20:28.43,Default,,0,0,0,,سيغير الأحباب منك
Dialogue: 0,1:20:29.03,1:20:32.02,Default,,0,0,0,,سيرشدك علمك
Dialogue: 0,1:20:32.23,1:20:35.33,Default,,0,0,0,,ولا شيء يمكنه اسكات
Dialogue: 0,1:20:35.36,1:20:38.43,Default,,0,0,0,,هذا الصوت الضعيف بداخلك
Dialogue: 0,1:20:39.03,1:20:42.24,Default,,0,0,0,,وعندما  يبدأ يهمس صوتك سيقول
Dialogue: 0,1:20:42.43,1:20:45.43,Default,,0,0,0,,يا "موانا" لقد حققت الكثير
Dialogue: 0,1:20:46.17,1:20:52.43,Default,,0,0,0,,استمعي يا "موانا"، هل تعرفين نفسك حقًا؟
Dialogue: 0,1:20:54.43,1:20:56.52,Default,,0,0,0,,من أنا؟
Dialogue: 0,1:20:58.43,1:21:01.43,Default,,0,0,0,,أن الفتاة المحبة لأرضي"
Dialogue: 0,1:21:01.53,1:21:05.03,Default,,0,0,0,,أنا الفتاة المحبة للبحر
Dialogue: 0,1:21:06.15,1:21:09.04,Default,,0,0,0,,أسمع ندائه
Dialogue: 0,1:21:11.17,1:21:14.15,Default,,0,0,0,,أنا ابنة زعيم القرية
Dialogue: 0,1:21:14.43,1:21:17.43,Default,,0,0,0,,لقد كنا بحارة
Dialogue: 0,1:21:18.23,1:21:20.43,Default,,0,0,0,,نصل إلى مآربنا البعيدة
Dialogue: 0,1:21:20.48,1:21:23.43,Default,,0,0,0,,وهم ينادونني
Dialogue: 0,1:21:24.43,1:21:27.12,Default,,0,0,0,,أنا أبحرت بالنيابة عن شعبي
Dialogue: 0,1:21:27.43,1:21:30.26,Default,,0,0,0,,وأبي أيضًا بحار
Dialogue: 0,1:21:30.43,1:21:36.05,Default,,0,0,0,,هذه أنا، أسمعه يناديني
Dialogue: 0,1:21:37.43,1:21:42.19,Default,,0,0,0,,ولم يكن ذلك الصوت بعيدًا بل بداخلي
Dialogue: 0,1:21:42.22,1:21:49.33,Default,,0,0,0,,كما الأمواج تزيد وتنحسر
Dialogue: 0,1:21:50.07,1:21:55.25,Default,,0,0,0,,سأحفظك هنا في قلبي\Nفقد ذكرتني
